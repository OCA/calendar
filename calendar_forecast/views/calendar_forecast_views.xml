<odoo>

    <record id="calendar_forecast_tree" model="ir.ui.view">
        <field name="name">calendar.forecast.tree</field>
        <field name="model">calendar.forecast</field>
        <field name="arch" type="xml">
            <tree string="Forecasts" >
                <field name="name" string="Period"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="total_time" widget="float_time"/>
            </tree>
        </field>
    </record>


    <record id="calendar_forecast_form" model="ir.ui.view">
        <field name="name">calendar.forecast.form</field>
        <field name="model">calendar.forecast</field>
        <field name="arch" type="xml">
            <form string="Forecast">

                <sheet>
                    <div class="oe_title">
                        <label for="project_id" class="oe_edit_only"/>
                        <h1>
                          <field
                              name="project_id"
                              domain="[('company_id', '=', company_id), ('allow_timeforecasts', '=', True)]"
                          /></h1>
                    </div>
                    <group>
                        <group name="dates">
                            <label for="date_start" string="Forecast Period"/>
                            <div style="display: inline;"><field name="date_start" class="oe_inline"/> to <field name="date_end" class="oe_inline"/></div>
                        </group>
                        <group name="details">
                            <field name="company_id" groups="base.group_multi_company" force_save="1"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Summary">
                          <group class="oe_edit_only">

                              <field
                                  name="add_line_task_id"
                                  attrs="{'invisible': [('project_id', '=', False)]}"
                                  context="{'default_project_id': project_id}"
                              />
                              <field name="add_line_employee_id" placeholder="Employee's Name"
                                     attrs="{'invisible': ['|',('add_line_task_id', '=', False),'&amp;', ('add_line_task_id', '!=', False), ('add_line_employee_category_id', '!=', False)]}"/>
                              <field
                                  name="add_line_employee_category_id"
                                  attrs="{'invisible': [('add_line_task_id', '=', False)]}"
                              />
                              <button name="button_add_line"
                                      type="object"
                                      string="Add new line"
                                      class="oe_highlight"
                                      attrs="{'invisible': [('add_line_task_id', '=', False)]}"
                              />
                          </group>
                            <group name="Forecast" class="calendar_forecast_summary">
                                <field name="line_ids" nolabel="1" attrs="{'readonly': False}"
                                       widget="x2many_2d_matrix"
                                       field_x_axis="value_x"
                                       field_y_axis="value_y"
                                       field_value="unit_amount"
                                       x_axis_clickable="0"
                                       y_axis_clickable="1">
                                    <!-- Well this is embarrassing... we need to set a huge limit for records to be fetched in
                                    order to make sure that all rows are going to be displayed. At least until we find a method to
                                    dynamically define the limit.-->
                                    <tree limit="1000000">
                                        <field name="value_x"/>
                                        <field name="value_y"/>
                                        <field name="unit_amount" widget="float_time"/>
                                        <field name="forecast_id"/>
                                        <field name="date"/>
                                        <field name="task_id"/>
                                        <field name="company_id" groups="base.group_multi_company"/>
                                        <field name="employee_id"/>
                                        <field name="new_line_id" invisible="1"/>
                                        <!--  Don't remove last fields, they are technically needed for the widget to work properly.-->
                                    </tree>
                                </field>

                            </group>
                        </page>
                        <page string="Details">
                            <field
                                name="timeforecast_ids"
                                nolabel="1">
                                <tree editable="bottom" string="Forecast Activities">
                                    <field name="employee_domain_ids" invisible="1"/>
                                    <field name="id" />
                                    <field name="date"/>
                                    <field name="task_id" required="1"/>
                                    <field name="employee_or_category" required="1"/>
                                    <field name="unit_amount" widget="float_time" string="Hours" sum="Hours"/>
                                </tree>
                                <form string="Forecast Activities">
                                    <group>
                                        <field name="employee_domain_ids" invisible="1"/>
                                        <field name="id" />
                                        <field name="date"/>
                                        <field name="task_id" required="1"/>
                                        <field name="employee_id" required="1"/>
                                        <field name="employee_category_id" required="1"/>
                                        <field name="unit_amount" widget="float_time" string="Hours"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>

    <record id="view_calendar_forecast_filter" model="ir.ui.view">
        <field name="name">calendar.forecast.filter</field>
        <field name="model">calendar.forecast</field>
        <field name="arch" type="xml">
            <search string="Search Forecast">
                <field name="date_start"/>
                <field name="project_id"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_employees" string="Employees" domain="[]" context="{'group_by':'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="act_calendar_forecast_my_timeforecasts" model="ir.actions.act_window">
        <field name="name">My Forecasts</field>
        <field name="res_model">calendar.forecast</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <!-- <field name="domain">[('employee_id.user_id', '=', uid)]</field> -->
        <field name="search_view_id" ref="view_calendar_forecast_filter"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
             New timeforecast sheet.
            </p><p>
             You must record timeforecasts in the sheet every day and confirm at the end
             of the reporting period. Once the timeforecast sheet is confirmed, it should be
             validated by a reviewer.
            </p><p>
             Forecasts can also be invoiced to customers, depending on
             the configuration of each project's related contract.
            </p>
        </field>
    </record>

    <record id="act_calendar_forecast_all_timeforecasts" model="ir.actions.act_window">
        <field name="name">All Forecasts</field>
        <field name="res_model">calendar.forecast</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_calendar_forecast_filter"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
             Forecasts.
            </p><p>
             Employees must record timeforecasts in the sheet every day and confirm at the end
             of the reporting period. Once the timeforecast sheet is confirmed, it should be
             validated by a reviewer.
            </p><p>
             Forecasts can also be invoiced to customers, depending on
             the configuration of each project's related contract.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_forecast_root"
        name="Forecast"
        parent="project.menu_main_pm"
        sequence="12"
    />

    <menuitem
        action="act_calendar_forecast_all_timeforecasts"
        id="menu_act_calendar_forecast_all_timeforecasts"
        parent="menu_forecast_root"
        sequence="6"
        groups="hr_timeforecast.group_timeforecast_manager"
    />


</odoo>

<odoo>
    <record id="calendar_event_timeline_view_timeline" model="ir.ui.view">
        <field name="model">calendar.event</field>
        <field name="type">timeline</field>
        <field name="arch" type="xml">
            <timeline date_start="start"
                      date_stop="stop"
                      string="Meetings"
                      default_group_by="user_id"
                      event_open_popup="true"
                      zoomKey="ctrlKey"
                      color_field="color"
                      mode="day">
            </timeline>
        </field>
    </record>

    <record id="calendar.action_calendar_event" model="ir.actions.act_window">
        <field name="view_mode">calendar,timeline,tree</field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.microsoft.calendar</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_microsoft_calendar" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_microsoft_calendar" />
                        <div class="text-muted">
                            Synchronize your calendar with Outlook Calendar
                        </div>
                        <div
                            class="content-group"
                            attrs="{'invisible': [('module_microsoft_calendar','=',False)]}"
                        >
                            <label
                                for="cal_microsoft_client_id"
                                string="Client ID"
                                class="o_light_label"
                            />
                            <field name="cal_microsoft_client_id" nolabel="1" />
                            <br />
                            <label
                                for="cal_microsoft_client_secret"
                                string="Client Secret"
                                class="o_light_label"
                            />
                            <field
                                name="cal_microsoft_client_secret"
                                password="True"
                                nolabel="1"
                            />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

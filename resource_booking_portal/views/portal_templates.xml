<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="portal_my_home" inherit_id="portal.portal_my_home">
            <xpath expr="//div[hasclass('o_portal_docs')]" position="after">
                <div
                    t-if="env.user.create_booking_from_portal or env.user.has_group('base.group_system')"
                >
                    <h3>Actions</h3>
                    <div class="o_portal_actions list-group">
                        <t t-call="resource_booking_portal.portal_docs_action">
                            <t t-set="title">Create a booking</t>
                            <t t-set="url" t-value="'/my/bookings/prepare/form'" />
                        </t>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="portal_docs_action" name="My Portal Action Entry">
            <a
                t-att-href="url"
                t-att-title="title"
                class="list-group-item list-group-item-action d-flex align-items-center justify-content-between"
            >
                <t t-esc="title" />
            </a>
        </template>


        <template
            id="portal_my_home_menu"
            name="Portal layout : creating"
            inherit_id="portal.portal_breadcrumbs"
            priority="20"
        >
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li
                    t-if="page_name == 'create_booking'"
                    t-attf-class="breadcrumb-item active"
                >
                    <span>Create booking</span>
                </li>
            </xpath>
        </template>


        <template id="booking_create_form" name="Booking Create Form">
            <t t-call="portal.portal_layout">
                <div class="contianer mt-4">
                    <div class="row">
                        <div class="col-12">
                                <form action="/my/bookings/create" method="post">
                                    <input
                                    type="hidden"
                                    name="csrf_token"
                                    t-att-value="request.csrf_token()"
                                />
                                    <div class="form-row">
                                        <div class="col-12 mb-1">
                                            <label
                                            class="text-primary"
                                            for='resource_name'
                                        >Name</label>
                                            <input
                                            class="form-control"
                                            name="name"
                                            type="text"
                                            id="resource_name"
                                            placeholder="Resource Name"
                                            required="required"
                                        />
                                        </div>
                                    </div>
                                <div class="form-row">
                                    <div class="col-12 mb-1 mt-1">
                                        <label
                                            class="text-primary"
                                            for="resource_type"
                                        >Type</label>
                                        <select
                                            class="form-control"
                                            name="type"
                                            id="resource_type"
                                            required="required"
                                        >
                                        <t t-foreach="types" t-as="type">
                                                <option
                                                    t-attf-value="#{type['id']}"
                                                ><span t-esc="type['name']" /></option>
                                        </t>
                                        </select>
                                    </div>
                                </div>
                                    <div class="form-row">
                                        <div class="col-12 mb-1 mt-1">
                                            <label
                                            class="text-primary"
                                            for="resource_description"
                                        >Description</label>
                                            <textarea
                                            class="form-control"
                                            name="description"
                                            id="resource_description"
                                            rows="3"
                                        />
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-12 mt-1">
                                            <button
                                            type="submit"
                                            class="btn btn-primary float-right"
                                        >Continue</button>
                                        </div>
                                    </div>

                                </form>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>

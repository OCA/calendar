<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_resource_planning">
        <field name="name">Resource Planning</field>
        <field name="description"></field>
    </record>

    <record id="group_resource_planning_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="resource_planning.module_category_resource_planning"/>
    </record>

    <record id="group_resource_planning_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="resource_planning.module_category_resource_planning"/>
        <field name="implied_ids" eval="[(4, ref('resource_planning.group_resource_planning_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">
        <record id="resource_allocation_line_comp_rule" model="ir.rule">
            <field name="name">Resource Allocation Line multi-company</field>
            <field name="model_id" ref="model_resource_allocation_line"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

        <record model="ir.rule" id="resource_allocation_line_manager_rule">
            <field name="name">Resource Allocation Line: Manager: see all</field>
            <field name="model_id" ref="model_resource_allocation_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('resource_planning.group_resource_planning_manager'))]"/>
        </record>

        <record id="resource_allocation_plan_comp_rule" model="ir.rule">
            <field name="name">Resource Allocation Plan multi-company</field>
            <field name="model_id" ref="model_resource_allocation_plan"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>

        <record model="ir.rule" id="resource_allocation_plan_manager_rule">
            <field name="name">Resource Allocation Plan: Manager: see all</field>
            <field name="model_id" ref="model_resource_allocation_plan"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4,ref('resource_planning.group_resource_planning_manager'))]"/>
        </record>
    </data>

</odoo>
